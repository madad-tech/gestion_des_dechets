         <div class="container d-flex justify-content-center mt-50 mb-50">
          <div class="">
              <div class="card-header header-elements-inline">
                  <h5 class="card-title">Histoire de modification au niveau du conteneur<span style="font-weight: bold ;"> <%= cuisConteneur.typeC %></span> </h5>
                 
              </div>
              <div class="table-responsive">
                  <table class="table table-hover" data-search="true">
                      <thead>
                          <tr>
                              <th>User</th>
                              <th>date de modification</th>
                              <th>champs modifié </th>
                              <th>Ancienne valeur</th>
                              <th>nouvelle valeur</th>
                          </tr>
                      </thead>
                      <tbody>
                        <% modif.forEach( modif => { %>
                          <tr>
                              <td><%= modif.user %></td>
                              <td><%= modif.date %></td>

                              <% if( modif.key == 'typeC'){ %>
                                <td>Type de conteneur</td>
                                <% } else if (modif.key == 'nombreC'){ %> 
                              <td>nombre de conteneur</td>
                              <% } else if (modif.key == 'dateC'){ %> 
                                <td>date de pesage</td>
                              <% } else if (modif.key == 'montantC'){ %> 
                                <td>montant facturé</td>
                              <% } else if (modif.key == 'cautionC'){ %> 
                                <td>caution</td>
                              <% } else if (modif.key == 'poidsC'){ %> 
                                <td>poids de déchets</td>
                              <% } else if (modif.key == 'commentaireC'){ %> 
                                <td>commentaire</td>
                              <% } %>

                              <td><%= modif.old %></td>
                              <td><%= modif.new %></td>
                          </tr>
                   
                          <% }) %>
                          
                      </tbody>
                  </table> 
                  
                
              </div>
             
          </div>
          
