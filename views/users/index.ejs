	<div class="row">
    <div class="table-responsive">
      <table class="table table-hover">
          <thead>
              <tr>
                 <th class="text-center">Nom</th>
                  <th class="text-center">Rôle</th>
                  <th class="text-center">Email</th>
                  
              </tr>
          </thead>
          <tbody>
            <% users.forEach( user => { %>
              <tr>
                <td class="text-center"><%= user.name %></td>
                  <td class="text-center"><%= user.role %></td>
                  <td><%= user.email %></td>
                  
                 
                  <td class="td-actions text-right">
				  <% if(! user.active ) {%>
                    <form method="post" action="/users/activate/<%= user.id %>" class="d-inline" >
                      <button type="submit" rel="tooltip" class="btn btn-info btn-just-icon btn-sm" data-original-title="" title="">
                          <i class="material-icons">done</i>
                      </button>
                    </form>
				 <%}%>
                    <form method="get" action="/users/edit/<%= user.id %>" class="d-inline">
                      <button type="submit" rel="tooltip" class="btn btn-success btn-just-icon btn-sm" data-original-title="" title="">
                          <i class="material-icons">edit</i>
                      </button>
                    </form>
                    <form action="/users/<%= user.id %>?_method=DELETE" method="POST" class="d-inline" >
                      <button type="submit" rel="tooltip" class="btn btn-danger btn-just-icon btn-sm" data-original-title="" title="">
                          <i class="material-icons">close</i>
                      </button>
                    </form>
                  </td>
              </tr>
              <% }) %>
          </tbody>
      </table>
